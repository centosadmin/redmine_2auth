<div id="login-form">
    <%= form_tag(sms_confirm_path) do %>
        <table>
          <tr>
            <td align="right"><label for="sms_password"><%=l(:sms_password)%>:</label></td>
            <td align="left"><%= text_field_tag :sms_password %></td>
          </tr>
          <tr>
            <td align="left">
              <%= link_to l(:resend_sms), sms_resend_path %>
            </td>
            <td align="right" colspan="1">
              <input type="submit" name="login" value="<%=l(:button_login)%> &#187;"/>
            </td>
          </tr>
        </table>
    <% end %>
</div>

<%= javascript_tag "$('#sms_password').focus();" %>